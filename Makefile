.PHONY: all debug release clean

ifeq ($(WITHOUT_RUNTIME_FLAG),true)
FBCFLAGS+=-d WITHOUT_RUNTIME
FBCFLAGS_DEBUG+=
WITHOUT_RUNTIME_SUFFIX=-Rt
else
WITHOUT_RUNTIME_SUFFIX=+Rt
LDLIBS+=crt2.o crtbegin.o crtend.o fbrt0.o gcrt2.o -lfbmt
endif

FILE_SUFFIX_BASE=_$(GCC_VER)_$(FBC_VER)_$(WITHOUT_RUNTIME_SUFFIX)
FILE_SUFFIX=$(FILE_SUFFIX_BASE)

CODE_GENERATION_BACKEND=gcc
C_EXT=c
ASM_EXT=asm
O_EXT=o
OBJ_EXT=obj

ifeq ($(PROCESSOR_ARCHITECTURE),AMD64)

CFLAGS+=-m64 -march=native
ASFLAGS+=--64
ifeq ($(WITHOUT_RUNTIME_FLAG),true)
ENTRY_POINT_PARAM=-e ENTRYPOINT
else
ENTRY_POINT_PARAM=
endif
LDFLAGS+=-m i386pep
GORCFLAGS+=/machine X64

else

CFLAGS+=-m32 -march=native
ASFLAGS+=--32
ifeq ($(WITHOUT_RUNTIME_FLAG),true)
ENTRY_POINT_PARAM=-e _ENTRYPOINT@0
else
ENTRY_POINT_PARAM=
endif
LDFLAGS+=-m i386pe --large-address-aware
GORCFLAGS+=

endif

FBC ?= fbc.exe
FBCFLAGS+=-i src -r -s console -O 0
FBCFLAGS_DEBUG+=-g

CC ?= gcc.exe
EXTRA_CFLAGS+=-S
CFLAGS+=-Wall -Werror -Wno-main -Wno-unused-label -Wno-unused-function -Wno-unused-variable -Werror-implicit-function-declaration
CFLAGS_DEBUG+=-g
# CFLAGS+= ${EXTRA_CFLAGS} -I. -Isubdir
# ${CC} ${EXTRA_CFLAGS} ${CPPFLAGS} ${CFLAGS} -o $@ $< ${LDADD}

AS ?= as.exe
ASFLAGS+=
ASFLAGS_DEBUG+=
# $(AS) $(ASFLAGS)

AR ?= ar.exe
# ARFLAGS

GORC ?= GoRC.exe
GORCFLAGS+=/ni /o /d FROM_MAKEFILE
GORCFLAGS_DEBUG=/d DEBUG

LD ?= ld.exe
# LDFLAGS
# LDLIBS
# LD_DEBUG

# OBJECTS
# OBJECTS_DIR

LDFLAGS+=-subsystem console -T $(LD_SCRIPT) $(ENTRY_POINT_PARAM) --stack 1048576,1048576 --no-seh --nxcompat -L $(LIB_DIR)

OUTPUT_FILE_NAME_CONSOLE=Station922$(FILE_SUFFIX).exe

OBJECTFILES_RELEASE_CONSOLE_OBJECTS_COM=$(OBJ_RELEASE_DIR)$(PATH_SEP)AcceptConnectionAsyncTask$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ArrayStringWriter$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)AsyncResult$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ClientRequest$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ClientUri$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)CreateInstance$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)FileBuffer$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Guids$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HeapBSTR$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HeapMemoryAllocator$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpGetProcessor$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpOptionsProcessor$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpProcessorCollection$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpReader$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpTraceProcessor$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)HttpWriter$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)IniConfiguration$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)MemoryBuffer$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)NetworkStream$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ReadRequestAsyncTask$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ServerResponse$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)TcpListener$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)ThreadPool$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WebServer$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WebSite$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WebSiteCollection$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WriteErrorAsyncTask$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WriteResponseAsyncTask$(FILE_SUFFIX).o 
OBJECTFILES_DEBUG_CONSOLE_OBJECTS_COM=  $(OBJ_DEBUG_DIR)$(PATH_SEP)AcceptConnectionAsyncTask$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ArrayStringWriter$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)AsyncResult$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ClientRequest$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ClientUri$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)CreateInstance$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)FileBuffer$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Guids$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HeapBSTR$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HeapMemoryAllocator$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpGetProcessor$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpOptionsProcessor$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpProcessorCollection$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpReader$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpTraceProcessor$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)HttpWriter$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)IniConfiguration$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)MemoryBuffer$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)NetworkStream$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ReadRequestAsyncTask$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ServerResponse$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)TcpListener$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)ThreadPool$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WebServer$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WebSite$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WebSiteCollection$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WriteErrorAsyncTask$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WriteResponseAsyncTask$(FILE_SUFFIX).o   

OBJECTFILES_RELEASE_CONSOLE_MODULES=$(OBJ_RELEASE_DIR)$(PATH_SEP)ClientBuffer$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Station922$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Http$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Logger$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Mime$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)Network$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WebUtils$(FILE_SUFFIX).o 
OBJECTFILES_DEBUG_CONSOLE_MODULES=  $(OBJ_DEBUG_DIR)$(PATH_SEP)ClientBuffer$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Station922$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Http$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Logger$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Mime$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)Network$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WebUtils$(FILE_SUFFIX).o   

OBJECTFILES_RELEASE_CONSOLE_RESOURCES=$(OBJ_RELEASE_DIR)$(PATH_SEP)Resources$(FILE_SUFFIX).obj
OBJECTFILES_DEBUG_CONSOLE_RESOURCES=  $(OBJ_DEBUG_DIR)$(PATH_SEP)Resources$(FILE_SUFFIX).obj

OBJECTFILES_RELEASE_CONSOLE_BASE=$(OBJECTFILES_RELEASE_CONSOLE_OBJECTS_COM) $(OBJECTFILES_RELEASE_CONSOLE_MODULES) $(OBJECTFILES_RELEASE_CONSOLE_RESOURCES)
OBJECTFILES_DEBUG_CONSOLE_BASE=  $(OBJECTFILES_DEBUG_CONSOLE_OBJECTS_COM)   $(OBJECTFILES_DEBUG_CONSOLE_MODULES)   $(OBJECTFILES_DEBUG_CONSOLE_RESOURCES)

OBJECTFILES_RELEASE_CONSOLE=$(OBJECTFILES_RELEASE_CONSOLE_BASE) $(OBJ_RELEASE_DIR)$(PATH_SEP)ConsoleMain$(FILE_SUFFIX).o $(OBJ_RELEASE_DIR)$(PATH_SEP)WindowsServiceMain$(FILE_SUFFIX).o
OBJECTFILES_DEBUG_CONSOLE=  $(OBJECTFILES_DEBUG_CONSOLE_BASE)   $(OBJ_DEBUG_DIR)$(PATH_SEP)ConsoleMain$(FILE_SUFFIX).o   $(OBJ_DEBUG_DIR)$(PATH_SEP)WindowsServiceMain$(FILE_SUFFIX).o  


all: release debug

release: CFLAGS+=$(CFLAGS_RELEASE)
release: ASFLAGS+=--strip-local-absolute
release: LDFLAGS+=-s --gc-sections -L "$(OBJ_RELEASE_DIR)"
release: $(BIN_RELEASE_DIR)$(PATH_SEP)$(OUTPUT_FILE_NAME_CONSOLE)

debug: FBCFLAGS+=$(FBCFLAGS_DEBUG)
debug: CFLAGS+=$(CFLAGS_DEBUG)
debug: ASFLAGS+=$(ASFLAGS_DEBUG)
debug: GORCFLAGS+=$(GORCFLAGS_DEBUG)
debug: LDFLAGS+=$(LDFLAGS_DEBUG) -L "$(OBJ_DEBUG_DIR)"
debug: LDLIBS+=$(LDLIBS_DEBUG)
debug: $(BIN_DEBUG_DIR)$(PATH_SEP)$(OUTPUT_FILE_NAME_CONSOLE)

.PRECIOUS: $(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT)
.PRECIOUS: $(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT)
.PRECIOUS: $(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT)
.PRECIOUS: $(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT)

clean:
	echo $(DELETE_COMMAND) %C_FILES% %ASM_FILES% %O_FILES% %OBJ_FILES% %EXE_FILES%

include dependencies.mk

$(BIN_RELEASE_DIR)$(PATH_SEP)$(OUTPUT_FILE_NAME_CONSOLE): $(OBJECTFILES_RELEASE_CONSOLE)
	$(LD) $(LDFLAGS) $^ $(LDLIBS) -o $@

$(BIN_DEBUG_DIR)$(PATH_SEP)$(OUTPUT_FILE_NAME_CONSOLE):   $(OBJECTFILES_DEBUG_CONSOLE)
	$(LD) $(LDFLAGS) $^ $(LDLIBS) -o $@

$(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).o: $(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT)
	$(AS) $(ASFLAGS) -o $@ $<

$(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).o: $(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT)
	$(AS) $(ASFLAGS) -o $@ $<

$(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT): $(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT)
	$(CC) $(EXTRA_CFLAGS) $(CFLAGS) -o $@ $<

$(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(ASM_EXT): $(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT)
	$(CC) $(EXTRA_CFLAGS) $(CFLAGS) -o $@ $<

$(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT): src$(PATH_SEP)%.bas
	$(FBC) $(FBCFLAGS) $<
	$(MOVE_COMMAND) src$(MOVE_PATH_SEP)$*.$(C_EXT) $(OBJ_RELEASE_DIR_MOVE)$(MOVE_PATH_SEP)$*$(FILE_SUFFIX).$(C_EXT)

$(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).$(C_EXT): src$(PATH_SEP)%.bas
	$(FBC) $(FBCFLAGS) $<
	$(MOVE_COMMAND) src$(MOVE_PATH_SEP)$*.$(C_EXT) $(OBJ_DEBUG_DIR_MOVE)$(MOVE_PATH_SEP)$*$(FILE_SUFFIX).$(C_EXT)

$(OBJ_RELEASE_DIR)$(PATH_SEP)%$(FILE_SUFFIX).obj: src$(PATH_SEP)%.RC
	$(GORC) $(GORCFLAGS) /fo $@ $<

$(OBJ_DEBUG_DIR)$(PATH_SEP)%$(FILE_SUFFIX).obj: src$(PATH_SEP)%.RC
	$(GORC) $(GORCFLAGS) /fo $@ $<
